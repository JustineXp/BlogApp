<%- include('partials/header') %>
<div class="ui show container segment">
  <div class="ui stackable grid">
    <div class="ten wide column">
      <img class="showimg" src="<%= blog.image %>" alt="<%= blog.title %>" />
    </div>
    <div class="six wide column">
      <div class="showDetails">
        <h1><%= blog.title %></h1>
        <p><%= blog.content %></p>
        <p>
          <span class="posted">Posted on :</span><%= blog.created.toDateString()
          %>
        </p>
        <a href="/blogs/<%= blog._id %>/edit" class="ui button green"
          >Edit Post</a
        >
        <form
          class="makeInline"
          action="/blogs/<%= blog._id %>?_method=DELETE"
          method="post"
        >
          <button class="ui red button">Delete Post</button>
        </form>
      </div>
    </div>
  </div>
</div>
