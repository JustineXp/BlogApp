<%- include('partials/header') %>
<div class="ui s container">
  <h1>Edit <%= blog.title %></h1>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="ui form">
      <div class="field">
        <label>Title</label>
        <input type="text" name="title" value="<%= blog.title %>" />
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="image" value="<%= blog.image%>" />
      </div>

      <div class="field">
        <label>Blog Content</label>
        <textarea rows="2" name="content"><%= blog.content %></textarea>
      </div>
      <button class="ui button" type="submit">Submit</button>
    </div>
  </form>
</div>
